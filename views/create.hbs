<div class="container mt-5">
  <h1>Create Post</h1>
  <p>This is some filler to show you're on the right page!</p>
  <div class="mb-3">
    <label for="post-title" class="form-label">Title</label>
    <input
      type="text"
      id="post-title"
      class="form-control"
      placeholder="Title"
    />
  </div>
  <div class="mb-3">
    <label for="post-text" class="form-label">Post Content</label>
    <textarea id="post-text" class="form-control" placeholder="Text"></textarea>
    <button
      id="post-button"
      type="submit"
      class="btn btn-primary mt-3 w-25"
    >Submit Post</button>

  </div>
</div>
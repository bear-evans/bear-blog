<script src='./js/edit.js'></script>
<div class='container mt-5'>
  <h1>Edit Post</h1>
  {{#if error}}
    <div class='alert alert-danger hidden' role='alert'>
      <p>Error: {{error}}</p>
    </div>
  {{/if}}
  <p>Need to change something?</p>
  <div class='mb-3'>
    <label for='post-title' class='form-label'>Title</label>
    <input
      type='text'
      id='post-title'
      class='form-control'
      placeholder='Title'
    />
  </div>
  <div class='mb-3'>
    <label for='post-text' class='form-label'>Post Content</label>
    <textarea id='post-text' class='form-control' placeholder='Text'></textarea>
    <button
      id='post-button'
      type='submit'
      class='btn btn-primary mt-3 w-25'
    >Submit Edit</button>

  </div>
</div>
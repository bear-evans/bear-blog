<div class='container mt-5'>
  <p>Welcome to Bearpress! Check out what others have to say, or create an
    account to share your own thoughts!</p>

  <h2>Recent Posts</h2>
  <div class='container d-md-flex'>
    {{#each posts}}
      <div class='post-preview mt-2 ms-2 bg-light has-text-black'>
        <a href='/blogs/{{this.id}}' class='text-dark'>
          <div class='post-title bg-dark text-light p-3'>
            <h3>{{this.title}}</h3></div>
          <div class='m-3'>
            <p class='text-muted'>Created at
              {{this.createdAt}}
              by
              {{this.User.name}}</p>
            <p>{{this.content}}</p>
          </div>
        </a>
      </div>
    {{/each}}
  </div>
</div>
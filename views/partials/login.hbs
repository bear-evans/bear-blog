{{#if loggedIn}}
  <div id="greeting">Hello,
    {{name}}!
    <div id="logout-button"><a href="/api/user/logout">Logout</a></div>
  </div>
{{else}}
  <div id="header-login" class="input-group input-group-sm login-form">
    <input
      id="email-login"
      type="text"
      class="form-control me-2"
      placeholder="Email"
      aria-label="Email"
    />

    <input
      id="password-login"
      type="text"
      class="form-control mx-2"
      placeholder="Password"
      aria-label="password"
    />
    <button
      id="login-button"
      type="submit"
      class="btn btn-primary ms-2"
    >Login</button>
  </div>
{{/if}}